<manifest
		xmlns:android="http://schemas.android.com/apk/res/android"
		package="com.tuenti.applogger"
		>
	<application>
		<activity
				android:name=".ui.AppLoggerActivity"
				android:label="@string/toolbar_title"
				android:exported="false"
				>

			<meta-data
					android:name="android.app.searchable"
					android:resource="@xml/searchable" />

			<intent-filter>
				<action android:name="android.intent.action.SEARCH" />
			</intent-filter>

		</activity>

		<provider
				android:name="com.tuenti.applogger.io.provider.AppLoggerFileProvider"
				android:authorities="${applicationId}.providers.AppLoggerFileProvider"
				android:exported="false"
				android:grantUriPermissions="true"
				>
			<meta-data
					android:name="android.support.FILE_PROVIDER_PATHS"
					android:resource="@xml/app_logger_file_provider"/>
		</provider>

	</application>
</manifest>
